pipeline{
 agent {
       label {
	           label "build-in"
               costomWorkspace "/mnt/git"		
		     }
		}	 
 
  stages{
    stage('install aparche'){
	     steps{
		      sh" yum install httpd -y "
			  }
			                }
							
							
	stage('Deploy index'){
	     steps{
		      sh" cp -r index.html /var/www/html "
              sh"chmod -R 777 ?var/www/html/index.html "
			  }
			                }						
	
    stage('start aparche'){
	     steps{
		      sh" service httpd start "
			  }
			                }	
		}
        }		
